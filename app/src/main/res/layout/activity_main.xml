<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350dp">

        <TextView
            android:id="@+id/lock_icon"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:drawableBottom="@drawable/ic_lock_black_24dp"
            android:background="@drawable/lock_press"></TextView>

        <TextView
            android:id="@+id/title_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/lock_icon"
            android:text="数据安全聚合系统用户端"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="#000000">

        </TextView>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|center">

        <Button
            android:id="@+id/getButton"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:background="@drawable/main_button_pink"
            android:text="获取数据"
            android:textColor="#FFFFFF">
        </Button>

        <Button
            android:id="@+id/doButton"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:background="@drawable/main_button_pink"
            android:text="加密数据"
            android:textColor="#FFFFFF"
            android:layout_marginTop="20dp"
            android:layout_below="@id/getButton">
        </Button>

        <Button
            android:id="@+id/sendButton"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:background="@drawable/main_button_pink"
            android:text="发送数据"
            android:textColor="#FFFFFF"
            android:layout_marginTop="20dp"
            android:layout_below="@id/doButton">
        </Button>
    </RelativeLayout>

</LinearLayout>